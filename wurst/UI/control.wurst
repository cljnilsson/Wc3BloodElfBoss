package control

import ClosureTimers
import ReforgeUI

public function uiInit()
	BlzLoadTOCFile("UI/UnitInfoPanels.toc")
	doAfter(1) -> 
		group g = GetUnitsOfPlayerAll(players[0])
		unit uu = g.getRandomUnit()
		g.destr()
		SelectUnitSingle(uu)
		doAfter(1) -> 
			onInit()
			doAfter(0.35) -> 
				uu.issueImmediateOrder("stop") // forces refresh of cmd buttons
				players[0].clearSelection()	